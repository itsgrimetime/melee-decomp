# Database configuration
DATABASE_URL=psql://decompme:decompme@postgres:5432/decompme
POSTGRES_USER=decompme
POSTGRES_PASSWORD=decompme
POSTGRES_DB=decompme

# Django settings
SECRET_KEY="django-insecure-melee-decomp-local-dev-key-change-in-production"
DEBUG="on"
ALLOWED_HOSTS="backend,localhost,127.0.0.1"

# Sandbox settings
USE_SANDBOX_JAIL="on"
SANDBOX_DISABLE_PROC="true"

# Media URL (update if using different nginx port)
MEDIA_URL=http://localhost/media/

# Platform support flags
# Enable GameCube/Wii support for melee decomp
ENABLE_GC_WII_SUPPORT=YES

# Disable platforms not needed for melee
ENABLE_SWITCH_SUPPORT=NO
ENABLE_DREAMCAST_SUPPORT=NO
ENABLE_GBA_SUPPORT=NO
ENABLE_MACOSX_SUPPORT=NO
ENABLE_MSDOS_SUPPORT=NO
ENABLE_N3DS_SUPPORT=NO
ENABLE_N64_SUPPORT=NO
ENABLE_NDS_ARM9_SUPPORT=NO
ENABLE_PS1_SUPPORT=NO
ENABLE_PS2_SUPPORT=NO
ENABLE_PSP_SUPPORT=NO
ENABLE_SATURN_SUPPORT=NO
ENABLE_WIN32_SUPPORT=NO
